<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css' />
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Подключаем jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Подключаем плагин Popper (необходим для работы компонента Dropdown и др.) -->
    <script src="/popper/popper.min.js"></script>
    <!-- Подключаем Bootstrap -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header>
        
    </header>
    
    <main role="main">
        <section class="container-fluid">
            <div class="layout raw wrap">
                <div id="toolbar" class="d-flex justify-content-between">

                        <div class="section-title">
                            Операции
                        </div>
                        <div class="">
                            <form method="POST" action="/operations" class="">
                            <button type="submit" class="btn-primary btn btn-sm" name="action" value="new">
                                <div class="btn-content">
                                    Добавить операцию
                                </div>
                            </button>
                            </form>
                        </div>

                </div>

                <div class="d-flex">
                    <div class="datatable">
                        <form method="POST" action="/operations">
                            <input type="hidden" id="operationId" name="id" value="" />
                        <table class="portfolios-table">
                            <thead>
                                <tr>
                                    <th class="text-xs-left" role="columngeader">Id</th>
                                    <th class="text-xs-left" role="columnheader">Операция</th>
                                    <th class="text-xs-right" role="columnheader" width="50"></th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                            <tbody>
                                <% data.forEach(row => { %>
                                    <tr class="pointer" onClick="window.location='/operations/<%= row.id %>'">
                                        <td><%= row.id %></td>
                                        <td><%= row.title %></td>
                                        <td>
                                            <div class="flex" style="width: 75px;">
                                            <button type="submit" class="btn btn-sm flex-child" style="display:inline-block;" name="action" value="edit" placeholder="Редактировать" onClick="setOperationId(<%= row.id %>);"><img src="/img/edit-16.png" /></button>
                                            <button type="submit" class="btn btn-sm flex-child" style="display:inline-block;" name="action" value="delete" placeholder="Удалить" onClick="if (confirm('Дествительно удалить портфель и все его содержимое?')) {setOperationId(<%= row.id %>)};"><img src="/img/delete-16.png" /></button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!--  script for submitting portfolio id -->
    <script>
        function setOperationId(id) {
            document.getElementById('operationId').value = id;
        }
    </script>

    </main>

    <footer>
    </footer>

    </body>
    
</html>