<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/css/style.css' />
    <!-- Bootstrap core CSS -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/tsort.css" rel="stylesheet"> 
    <link href="/bootstrap-table/bootstrap-table.min.css" rel="stylesheet">

    <script src="/js/main.js"></script>
  </head>

  <body>
    <header>
      <% include menu %>
    </header>
    <main role="main">

      <div class="container-fluid">
        
        <div class="info-header">
            <h2>Избранное</h2> 
        </div>

      <form method="POST" action="/favorites" class="">
        <div id="toolbar" class="btn-toolbar" role="toolbar">
          <div id="toolbar-delete">
            <button class="btn btn-sm btn-primary" type="submit" name="action" value="delete">Удалить</button>
          </div>
        </div>
      
        
        <div class="main-content">

          <table class="favorites tsort">
            <thead>
              <tr>
                <th><input type="checkbox" name="checkall-toggle" value="" title="" onclick=""></th>
                <th>Тикер</th>
                <th>Компания</th>
                <th>Последняя</th>
                <th>Изменение, %</th>
              </tr>
            </thead>
            <tfoot>
            </tfoot>
            <tbody>
              <% for (var i = 0; i < data.length; i++) { %>   
              <tr>
                <td><input type="checkbox" name="cids[]" value="<%= data[i]['id'] %>" title="" onclick="" /</td>
                <td><a href = "/quotes/<%= data[i]['secid'] %>" ><%= data[i]['secid'] %></a></td>
                <td><%= data[i]['SHORTNAME'] %></td>
                <td><%= data[i]['LAST'] %></td>
                <td><span style="
                  <% if(data[i]['LASTTOPREVPRICE']<0){ %>
                    color:red;
                  <% } %>
                  <% if(data[i]['LASTTOPREVPRICE']>0){ %>
                    color:green;
                  <% } %>
                "><%= data[i]['LASTTOPREVPRICE'] %> %</span></td>
              </tr>
              <% } %>
            </tbody>
          </table>

        </div>

      </form>

      </div>

    </main>


  </body>
  <!-- Подключаем jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Подключаем плагин Popper (необходим для работы компонента Dropdown и др.) -->
    <script src="/popper/popper.min.js"></script>
    <!-- Подключаем Bootstrap -->
    <script src="/bootstrap/js/bootstrap.min.js"></script>
    <!-- Tsort. Сортировка таблиц плагин -->
    <script src="/js/tsort.js"></script>
    <script>$( document ).ready(function() {$('.tsort').tsort();});</script>

</html>