<% layout('../layout/page') %>
<% block('title', 'Портфели') %>
<% block('menu', 'portfolios') %>


                
                <form method="POST" action="/portfolios" class="" id="portfoliosForm">
                     <input type="hidden" id="portfolioId" name="portfolioId" value="" />

                <div id="toolbar" class="row mb-2 d-flex justify-content-between">
                        <div class="">
                            
                            <button type="submit" class="btn-primary btn btn-sm" name="action" value="edit">
                                <div class="btn-content">
                                    Добавить портфель
                                </div>
                            </button>
                            
                        </div>

                </div>


                <div class="row d-flex">
         
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-xs-left" role="columnheader">Название</th>
                                    <th class="text-xs-right" role="columnheader">Фикс. комиссия</th>
                                    <th class="text-xs-center" role="columnheader">Валюта</th>
                                    <th class="text-xs-right" role="columnheader">Дата открытия</th>
                                    <th class="text-xs-right" role="columnheader" width="20"></th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                            <tbody>
                                <% data.forEach(row => { %>
                                    <tr>
                                        <td  class="pointer" onClick="setPortfolioId(<%= row.id %>);document.getElementById('portfoliosForm').submit();">
                                            <%= row.title %>
                                        </td>
                                        <td  class="pointer" onClick="setPortfolioId(<%= row.id %>);document.getElementById('portfoliosForm').submit();">
                                            <%= row.comission %></td>
                                        <td  class="pointer" onClick="setPortfolioId(<%= row.id %>);document.getElementById('portfoliosForm').submit();">
                                            <%= row.currency %></td>
                                        <td  class="pointer" onClick="setPortfolioId(<%= row.id %>);document.getElementById('portfoliosForm').submit();">
                                            <%= row.dateopen.toISOString().slice(0,10) %></td>
                                        <td>
                <!-- Dropdown menu in cells -->
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown no-arrow mx-1">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-fw fa-ellipsis-h"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="userDropdown">
                                            
                            <button type="submit" class="btn btn-sm dropdown-item" style="display:inline-block;" name="action" value="edit" placeholder="Редактировать" onClick="setPortfolioId(<%= row.id %>);">
                                <i class="fas fa-edit fa-sm fa-fw mr-2 text-gray-400"></i>
                                Редактировать
                            </button>

                            <button type="submit" class="btn btn-sm dropdown-item" style="display:inline-block;" name="action" value="delete" placeholder="Удалить" onClick="if (confirm('Дествительно удалить портфель и все его содержимое?')) {setPortfolioId(<%= row.id %>)};">
                                <i class="fas fa-times fa-sm fa-fw mr-2 text-gray-400"></i>
                                Удалить
                            </button>
                        </div>
                    </li>
                </ul>
                <!-- Dropdown menu in cells -->
                                        
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>


                </div>

</form>



        <!--  script for submitting portfolio id -->
    <script>
        function setPortfolioId(id) {
            document.getElementById('portfolioId').value = id;
        }
    </script>
