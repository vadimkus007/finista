<% layout('../layout/page') %>
<% block('title', 'Портфели') %>
<% block('menu', 'portfolios') %>


                
                <form method="POST" action="/portfolios" class="">
                     <input type="hidden" id="portfolioId" name="id" value="" />

                <div id="toolbar" class="row mb-2 d-flex justify-content-between">
                        <div class="">
                            
                            <button type="submit" class="btn-primary btn btn-sm" name="action" value="edit">
                                <div class="btn-content">
                                    Добавить портфель
                                </div>
                            </button>

                        </div>

                </div>

                <div class="row d-flex">


                           
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="text-xs-left" role="columnheader">Название</th>
                                    <th class="text-xs-right" role="columnheader">Фикс. комиссия</th>
                                    <th class="text-xs-center" role="columnheader">Валюта</th>
                                    <th class="text-xs-right" role="columnheader">Дата открытия</th>
                                    <th class="text-xs-right" role="columnheader" width="50"></th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                            <tbody>
                                <% data.forEach(row => { %>
                                    <tr class="pointer" onClick="window.location='/portfolio/<%= row.id %>'">
                                        <td><%= row.title %></td>
                                        <td><%= row.comission %></td>
                                        <td><%= row.currency %></td>
                                        <td><%= row.dateopen.toISOString().slice(0,10) %></td>
                                        <td>
                                            <div class="flex" style="width: 75px;">
                                            <button type="submit" class="btn btn-sm flex-child" style="display:inline-block;" name="action" value="edit" placeholder="Редактировать" onClick="setPortfolioId(<%= row.id %>);"><img src="/img/edit-16.png" /></button>
                                            <button type="submit" class="btn btn-sm flex-child" style="display:inline-block;" name="action" value="delete" placeholder="Удалить" onClick="if (confirm('Дествительно удалить портфель и все его содержимое?')) {setPortfolioId(<%= row.id %>)};"><img src="/img/delete-16.png" /></button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>


                </div>

</form>



        <!--  script for submitting portfolio id -->
    <script>
        function setPortfolioId(id) {
            document.getElementById('portfolioId').value = id;
        }
    </script>
